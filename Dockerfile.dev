# Development Dockerfile for Legal Tender
# Volume-mounted code, dev tools, stays alive for VS Code Dev Containers

FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    ca-certificates \
    postgresql-client \
    wget \
    git \
    && rm -rf /var/lib/apt/lists/*

# Set working directory (dev uses /workspace convention)
WORKDIR /workspace

# Copy requirements and install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Install dev tools
RUN pip install --no-cache-dir ipython ipdb pytest black ruff mypy

# Environment variables
ENV PYTHONPATH=/workspace \
    DAGSTER_HOME=/workspace \
    PYTHONUNBUFFERED=1

# Default command: sleep infinity (dev container stays alive for VS Code)
CMD ["sleep", "infinity"]
